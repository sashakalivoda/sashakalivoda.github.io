<span class="n">abs_values</span> <span class="o">=</span> <span class="n">df</span><span class="p">[</span><span class="n">df</span><span class="p">[</span><span class="s">'best_position'</span><span class="p">]</span><span class="o">==</span><span class="s">'LB'</span><span class="p">][</span><span class="s">'preferred_foot'</span><span class="p">].</span><span class="n">value_counts</span><span class="p">(</span><span class="n">ascending</span><span class="o">=</span><span class="bp">False</span><span class="p">)</span>
